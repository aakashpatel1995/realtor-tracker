{
  "manifest_version": 3,
  "name": "Realtor.ca Listing Tracker",
  "version": "1.5.0",
  "description": "Track real estate listings in the Greater Toronto Area from realtor.ca",
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "https://api2.realtor.ca/*",
    "https://script.google.com/*",
    "https://script.googleusercontent.com/*",
    "https://www.realtor.ca/*",
    "https://*.googleusercontent.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.realtor.ca/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
